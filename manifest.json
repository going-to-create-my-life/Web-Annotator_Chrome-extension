{
  "manifest_version": 3,
  "name": "Text Highlighter",
  "version": "1.0",
  "description": "A Chrome extension to highlight text on webpages.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-32.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contents.js"],
      "css": ["style.css"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}
